<UserControl 
    x:Name="u_root"        
    x:Class="CaseManager.BiezeUI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CaseManager"
    mc:Ignorable="d" MinHeight="20">
    <Grid>
        <Path    x:Name="p_path" Stroke="White" StrokeThickness="1"  
                    Data="M 7,7 C 300,0 0,300 293,293" IsEnabled="False" IsHitTestVisible="False" Margin="0,0,0,5"/>
        <Ellipse x:Name="e_start" Width="15" Height="15" Fill="WhiteSmoke" HorizontalAlignment="Left" VerticalAlignment="Top" IsHitTestVisible="False"/>
        <Ellipse x:Name="e_end" Width="15" Height="15" Fill="WhiteSmoke" VerticalAlignment="Bottom" HorizontalAlignment="Right" IsHitTestVisible="False"/>
    </Grid>
</UserControl>
